{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "text",
      "id": "small_header",
      "label": "Small Header Text",
      "default": "New Collection"
    },
    {
      "type": "text",
      "id": "main_heading",
      "label": "Main Heading",
      "default": "Spring Collection 2025"
    },
    {
      "type": "textarea",
      "id": "banner_text",
      "label": "Banner Text",
      "default": "Discover our latest arrivals for the new season"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#f4f4f4"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#333333"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<div
  class="custom-banner"
  style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }};"
>
  <div class="custom-banner__container">
    <div class="custom-banner__content">
      {% if section.settings.small_header != blank %}
        <p class="custom-banner__small-header">{{ section.settings.small_header }}</p>
      {% endif %}

      {% if section.settings.main_heading != blank %}
        <h2 class="custom-banner__heading">{{ section.settings.main_heading }}</h2>
      {% endif %}

      {% if section.settings.banner_text != blank %}
        <div class="custom-banner__text">{{ section.settings.banner_text }}</div>
      {% endif %}

      {% if section.settings.button_text != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="custom-banner__button">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>

    {% if section.settings.banner_image != blank %}
      <div class="custom-banner__image-container">
        <img
          src="{{ section.settings.banner_image | img_url: 'master' }}"
          alt="{{ section.settings.main_heading }}"
          class="custom-banner__image"
        >
      </div>
    {% endif %}
  </div>
</div>

<style>
  .custom-banner {
    padding: 40px 20px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .custom-banner__container {
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 30px;
  }

  .custom-banner__content {
    flex: 1;
    max-width: 600px;
  }

  .custom-banner__small-header {
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 10px;
    font-weight: 500;
  }

  .custom-banner__heading {
    font-size: 32px;
    margin-bottom: 15px;
    font-weight: 600;
  }

  .custom-banner__text {
    font-size: 16px;
    line-height: 1.5;
    margin-bottom: 25px;
  }

  .custom-banner__button {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ section.settings.text_color }};
    color: {{ section.settings.bg_color }};
    text-decoration: none;
    border-radius: 4px;
    font-weight: 500;
    transition: opacity 0.3s ease;
  }

  .custom-banner__button:hover {
    opacity: 0.9;
  }

  .custom-banner__image-container {
    flex: 1;
    max-width: 500px;
  }

  .custom-banner__image {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 8px;
  }

  @media screen and (max-width: 768px) {
    .custom-banner__container {
      flex-direction: column;
      text-align: center;
    }

    .custom-banner__content {
      margin-bottom: 30px;
    }

    .custom-banner__image-container {
      width: 100%;
    }
  }
</style>
